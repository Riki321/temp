                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">
                                <form action="/edit_profile" method="POST">
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Full Name</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="name" id="name" name="name" class="form-control" value="<%- user.name %>">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="email" id="email" name="email" class="form-control" value="<%- user.email %>">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Programe</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <!-- <input type="text" class="form-control" value="(239) 816-9029"> -->
                                            <select class="form-control" id="exampleSelect1" name="programe">
                                                <option value="0">Select Program</option>
                                                <option value="B.Tech - ICT" >B.Tech - ICT</option>
                                                <option value="B.Tech - ICT (CS)">B.Tech - ICT (CS)</option>
                                                <option value="B.Tech - MNC">B.Tech - MNC</option>
                                                <option value="MscIT">MscIT</option>
                                                <option value="M.Tech - ML">M.Tech - ML</option>
                                                <option value="M.Tech - Data Science">M.Tech - Data Science</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Batch Year</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <select class="form-control" id="exampleSelect2" name="batch">
                                                <option value="0">Select Year</option>
                                                <option value="1st Year" >1st Year</option>
                                                <option value="2nd Year">2nd Year</option>
                                                <option value="3rd Year">3rd Year</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Codeforces Profile</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="cfprofile" id="cfprofile" name="cfprofile"  class="form-control" value="<%- user.cfprofile %>">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Address</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="address" id="address" name="address" class="form-control" value="<%- user.address %>">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-3"></div>
                                        <div class="col-sm-9 text-secondary">
                                            <button type="submit" class="btn btn-primary px-4">
                                                Save Changes
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
			</div>
		</div>
	</div>



